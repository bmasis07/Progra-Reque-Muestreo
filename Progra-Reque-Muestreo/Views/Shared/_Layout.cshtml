<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/bundles/codigo")
</head>

<body>
    <div id="mySidenav" class="sidenav">
        <a href="javascript:void(0)" class="closebtn" onclick="closeNav()">&times;</a>
        <a>@Html.ActionLink("Inicio", "Index", "Home")</a>
        <a>@Html.ActionLink("Crear Proyecto", "Index", "NewProyect")</a>
        <a href="javascript:void(0)" onclick="sub()">Modificar Proyecto</a>
        <div id="subModificar">
            <a>Modificar Datos Generales</a>
            <a>Agregar Actividad</a>
            <a>Agregar Tarea</a>
            <a>Agregar Sujetos de Observación</a>
            <a>Crear Observación de Tarea</a>
            <a>Crear Ronda de Observación</a>
        </div>
        <a>@Html.ActionLink("Acerca de", "About", "Home")</a>
        <a>@Html.ActionLink("Ayuda", "Help", "Home")</a>
        <a>@Html.ActionLink("Contacto", "Contact", "Home")</a>
    </div>

    <div id="main">
        <span id="navegacion" onclick="openNav()">&#9776;  Menú de Navegación</span>
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - My ASP.NET Application</p>
        </footer>
    </div>

    
</body>
</html>
