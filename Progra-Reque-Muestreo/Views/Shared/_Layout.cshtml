<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/bundles/codigo")
</head>

<body>
    
    <div id="mySidenav" class="sidenav">
        <a href="javascript:void(0)" class="closebtn" onclick="closeNav()">&times;</a>
        <a>@Html.ActionLink("Inicio", "Index", "Home")</a>
        <a href="javascript:void(0)" onclick="subUser()">Administración de Usuario</a>
        <div id="subUsuario">
            <a>@Html.ActionLink("Administración de Usuarios", "Index", "Usuario")</a>
            <a>@Html.ActionLink("Registrar Usuario", "Registrar", "Usuario")</a>
            <a>@Html.ActionLink("Iniciar Sesión", "Login", "Usuario")</a>
            <a>Cerrar Sesión</a>
        </div>
        <a>@Html.ActionLink("Crear Proyecto", "Crear", "Proyecto")</a>
        <a href="javascript:void(0)" onclick="sub()">Modificar Proyecto</a>
        <div id="subModificar">
            <a>@Html.ActionLink("Modificar Datos Generales", "Index", "Proyecto")</a>
            <a>Agregar Actividad</a>
            <a>Agregar Tarea</a>
            <a>Agregar Sujetos de Observación</a>
            <a>Crear Observación de Tarea</a>
            <a>Crear Ronda de Observación</a>
            <a>Manejar privilegios de Asistentes</a>
        </div>
        <a>@Html.ActionLink("Acerca de", "About", "Home")</a>
        <a>@Html.ActionLink("Ayuda", "Help", "Home")</a>
        <a>@Html.ActionLink("Contacto", "Contact", "Home")</a>
    </div>

    <div id="main">
        <span id="navegacion" onclick="openNav()">&#9776;  Menú de Navegación</span>
        <span>
            @if (Session["usuario"] != null)
            {
                <span>Bienvenido, @Session["usuario"].ToString()</span>
            }
        </span>
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - My ASP.NET Application</p>
        </footer>
    </div>


</body>
</html>
